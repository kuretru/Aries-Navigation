<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kuretru.web.navigation.mapper.WebTagMapper">

    <select id="getMaxSequence" resultType="java.lang.Integer">
        select max(sequence)
        from web_tag
    </select>

    <update id="updateBatchByIds" parameterType="java.util.List">
        update web_tag
        <trim prefix="set" suffixOverrides=",">
            <trim prefix="name = CASE" suffix="END">
                <foreach collection="list" item="item">
                    <if test="item.name != null">
                        when id = #{item.id} then #{item.name}
                    </if>
                </foreach>
            </trim>
            <trim prefix="sequence = CASE" suffix="END">
                <foreach collection="list" item="item">
                    <if test="item.sequence != null">
                        when id = #{item.id} then #{item.sequence}
                    </if>
                </foreach>
            </trim>
        </trim>
        where id in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            ${item.id}
        </foreach>
    </update>

</mapper>