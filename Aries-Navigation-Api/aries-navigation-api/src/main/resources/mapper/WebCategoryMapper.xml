<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kuretru.web.navigation.mapper.WebCategoryMapper">

    <select id="getMaxSequence" resultType="java.lang.Integer">
        select max(sequence)
        from web_category
        where tag_id = #{tagId}
    </select>

    <update id="updateSequenceByIds" parameterType="com.kuretru.web.navigation.entity.data.WebCategoryDO">
        update web_category
        <trim prefix="set" suffixOverrides=",">
            <trim prefix="sequence = CASE" suffix="END">
                <foreach collection="list" item="item">
                    when id = #{item.id} then #{item.sequence}
                </foreach>
            </trim>
        </trim>
        where id in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            ${item.id}
        </foreach>
    </update>

</mapper>